@import "nib"

//Variables
grisOscuro=#363b3f
grisClaro=#F1F1F1

//Funciones
bree()
	font-family: 'Bree Serif', serif !important

lora()
	font-family: 'Lora', serif 
	
//Tags Generales	
body
	font-size 16px
	lora()

html,body
	heigth 100%

h1, h2, h3, h4, h5, h6
	bree()

//Administrador CSS

//Layout
.wrapper-admin
	.top
		background grisOscuro
		color white
		height 2rem
		left 0
		min-width 600px
		position fixed
		top 0
		width 100%
		z-index 9999
	
	.content
		background grisClaro
		width 100%
		height 100%
		padding-top 2rem
		
@media (min-width: 1025px)
	.wrapper-admin
		.content
			margin-left 3rem
			padding-left 2rem
		.sidebar-left
			background grisOscuro
			color gray
			height 100%
			left 0
			position fixed
			width 3rem
			z-index 9990
						
@media (min-width: 1280px)
	.wrapper-admin
		.row
			margin 0
			max-width 100%
		.content
			float left
			height 100%
			margin-left 10rem
			padding 2rem 1rem 1rem 2.2rem
			position fixed
			width 100%
		.sidebar-left
			width 10rem
				